
<table class="table table-bordered">
<thead>
  <tr>
    <th></th>
    <th>Product</th>
    <th>Description</th>
    <th>Unit Price</th>
    <th>Quantity Ordered</th>
    <th>Total Price</th>
  </tr>
  </thead>
  <tbody>
  <h4>Thank you for your order!</h4>
  <% @order.line_items.each do |item| %>
    <td class="order-image">
      <%= image_tag item.product.image.url class:'main-img' %>
    </td>
    <td>
      <%= item.product.name %>
    </td>
    <td> 
      <%= item.product.description %>
    </td>
    <td>
      <%= item.product.price %>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= item.total_price %>
    </td>
    <tr></tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="5">
        TOTAL:
      </th>
      <th>
        <%= @order.total_cents / 100.0 %>
      </th>
    </tr>
  </tfoot>
</table>
